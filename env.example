# Environment Configuration
ENVIRONMENT=development
DEBUG=true

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/database_name
REDIS_URL=redis://localhost:6379/0

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# Monitoring Configuration
PROMETHEUS_ENDPOINT=http://localhost:9090
GRAFANA_ENDPOINT=http://localhost:3000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security Configuration
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Service Configuration
API_GATEWAY_URL=http://localhost:8000
USER_SERVICE_URL=http://localhost:8001
INCIDENT_SERVICE_URL=http://localhost:8002
TRAFFIC_SERVICE_URL=http://localhost:8003
NEWS_SERVICE_URL=http://localhost:8004
CHAT_SERVICE_URL=http://localhost:8005
ANALYTICS_SERVICE_URL=http://localhost:8006
TRAFFIC_ANALYTICS_SERVICE_URL=http://localhost:8007
SCHEDULE_SERVICE_URL=http://localhost:8008
NOTIFICATION_SERVICE_URL=http://localhost:8009

# ClickHouse Configuration
CLICKHOUSE_URL=http://localhost:8123
CLICKHOUSE_DATABASE=traffic_analytics

# RabbitMQ Configuration
RABBITMQ_URL=amqp://admin:password@localhost:5672
RABBITMQ_VHOST=/

# TimescaleDB Configuration
TIMESCALE_URL=postgresql://user:password@localhost:5432/traffic_service

# File Storage Configuration
MEDIA_ROOT=/app/media
STATIC_ROOT=/app/staticfiles
MAX_UPLOAD_SIZE=10485760  # 10MB

# Cache Configuration
CACHE_TTL=3600  # 1 hour
SESSION_COOKIE_AGE=86400  # 24 hours

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60  # seconds

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=30
HEALTH_CHECK_INTERVAL=30

